<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDetailsNews"
    android:theme="@style/Theme.ProjectReaderApp"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btnBack_update_detail_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Cập nhật chi tiết báo"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:id="@+id/img_news_detail_update"
                android:layout_width="match_parent"
                android:layout_margin="50dp"
                android:layout_height="180dp"
                android:src="@drawable/bgnews"/>

            <EditText
                android:id="@+id/edt_create_detail_news_title_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Tên tiêu đề báo..."
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edt_create_detail_news_detail1_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Chi tiết báo dòng 1..."
                android:layout_gravity="center"/>


            <EditText
                android:id="@+id/edt_create_detail_news_detail2_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Chi tiết báo dòng 2..."
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/btn_new_detail_news_update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn"
                app:backgroundTint="@color/black"
                android:text="Cập nhật"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_delete_details_news"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn"
                app:backgroundTint="@color/black"
                android:text="Xóa"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

</LinearLayout>