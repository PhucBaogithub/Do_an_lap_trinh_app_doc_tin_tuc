<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btnBackCate"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ddf0ef"
        android:text="Chuyên mục"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#0097FF"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Chuyển đổi"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewNong"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewnong"
            android:layout_marginRight="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewMoi"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewmoi"
            android:layout_marginLeft="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewSuckhoe"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewsuckhoe"
            android:layout_marginRight="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewGiaitri"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewgiaitri"
            android:layout_marginLeft="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewTinhyeu"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewtinhyeu"
            android:layout_marginRight="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewThegioi"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewthegioi"
            android:layout_marginLeft="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewXe"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewxe"
            android:layout_marginRight="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_ViewCongnghe"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/viewcongnghe"
            android:layout_marginLeft="10dp"
            app:shapeAppearanceOverlay="@style/bordernews" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="Nguồn báo nổi bật"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:id="@+id/rcv_category"/>
    </LinearLayout>

</LinearLayout>