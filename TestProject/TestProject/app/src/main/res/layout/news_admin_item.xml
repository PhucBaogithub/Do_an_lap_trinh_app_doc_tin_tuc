<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/update_news_layout">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_news_admin_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="ID"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp">
                <ImageView
                    android:id="@+id/img_news_admin_item"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/img"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_news_admin_item"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Bú gà news đang được loan truyền thông tin không làm đồ án khắp cả nước"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/img_logo_news_admin_item"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vov"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>